<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragmentCrafts.CraftsmenFragmentCrafts">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="rtl">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="الحرفيين "
                android:textColor="#444941"
                android:textSize="20sp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintVertical_bias="0.046" />

            <EditText
                android:id="@+id/search_field"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_serach_style"
                android:drawableStart="@drawable/search"
                android:drawableLeft="@drawable/search"
                android:drawableTint="#707070"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:textColor="#999"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/textView2"
                tools:ignore="SpeakableTextPresentCheck" />


            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="83dp"
                android:src="@drawable/notification"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="330dp"
                android:text=" منتجاتي"
                android:textColor="@color/black"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@+id/search_field"
                card_view:layout_constraintEnd_toEndOf="parent"
                 />

            <TextView
                android:id="@+id/seeMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" رؤية الكل"
                android:textColor="#38C98C"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                app:layout_constraintTop_toBottomOf="@+id/search_field"
                card_view:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclercarftmyproduct"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="15dp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="320dp"
                android:text="قد يعجبك "
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/recyclercarftmyproduct"
                card_view:layout_constraintEnd_toEndOf="parent"
                 />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclercarftmeybelike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="355dp"
                android:text="جديد"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@+id/recyclercarftmeybelike"
                card_view:layout_constraintEnd_toEndOf="parent"
                 />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclercarftnew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/textView6" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</androidx.core.widget.NestedScrollView>